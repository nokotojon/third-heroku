<div class="main posts-new">
  <div class="coment-all">
    <h1 class="form-heading">コメントを書いてください！</h1>
    <div class="form">
      <div class="form-body">
       <%= form_for @coment do |f| %>
         <%= f.hidden_field :user_id, value: @coment.user_id %>
         <%= f.hidden_field :topic_id, value: @coment.topic_id %>
         <%= f.text_area :discription, class: 'form-control' %>
         <%= f.submit '投稿', class: 'btn btn-black btn-block' %>
        <% end %>
      </div>
    </div>
  </div>
</div>